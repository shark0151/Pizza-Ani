                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45*"></ColumnDefinition>
                    <ColumnDefinition MaxWidth="220" Width="200*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="Total" Grid.Column="0" Text="{Binding CartTotal}" FontSize="30" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0,0,20,0"></TextBlock>
                <Button Content="Check out" Grid.Column="1" CornerRadius="5" HorizontalAlignment="Stretch" Foreground="White" VerticalAlignment="Bottom" Click="Checkout_OnClick"/>
